<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include
        android:id="@+id/rl_header"
        layout="@layout/layout_header"/>

    <RadioGroup
        android:id="@+id/rg_bottom_navigator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d45"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="4">

        <RadioButton
            android:id="@+id/rb_frame_item_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:button="@null"
            android:drawableTop="@drawable/selector_frame_bottom_button_img1"
            android:gravity="center"
            android:text="@string/frame_item_one"
            android:textColor="@drawable/selector_frame_bottom_text_color"/>

        <RadioButton
            android:id="@+id/rb_frame_item_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:button="@null"
            android:drawableTop="@drawable/selector_frame_bottom_button_img2"
            android:gravity="center"
            android:text="@string/frame_item_two"
            android:textColor="@drawable/selector_frame_bottom_text_color"/>

        <RadioButton
            android:id="@+id/rb_frame_item_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:button="@null"
            android:drawableTop="@drawable/selector_frame_bottom_button_img3"
            android:gravity="center"
            android:text="@string/frame_item_three"
            android:textColor="@drawable/selector_frame_bottom_text_color"/>

        <RadioButton
            android:id="@+id/rb_frame_item_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:button="@null"
            android:drawableTop="@drawable/selector_frame_bottom_button_img4"
            android:gravity="center"
            android:text="@string/frame_item_four"
            android:textColor="@drawable/selector_frame_bottom_text_color"/>

    </RadioGroup>


    <View
        android:id="@+id/v_bottom_line"
        style="@style/line"
        android:layout_above="@id/rg_bottom_navigator"/>

    <FrameLayout
        android:id="@+id/fl_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/v_bottom_line"
        android:layout_below="@id/rl_header"/>
</RelativeLayout>
