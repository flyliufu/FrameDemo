<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_header_root"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d50"
                android:background="@color/white">

    <TextView
        android:id="@+id/tv_header_left_btn"
        android:layout_width="@dimen/d30"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/d16"
        android:drawableLeft="@mipmap/icon_return2"
        android:drawablePadding="@dimen/d4"/>

    <TextView
        android:id="@+id/tv_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:textColor="@color/_333333"
        android:textSize="@dimen/f17"/>

    <ImageView
        android:id="@+id/iv_header_right_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/d15"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_header_right_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/d15"
        android:textColor="@color/_666666"
        android:textSize="@dimen/f14"
        android:visibility="gone"/>

    <View
        android:id="@+id/v_header_line"
        style="@style/line"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>


</RelativeLayout>